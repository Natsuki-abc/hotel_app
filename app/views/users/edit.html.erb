<div>
    <h2>プロフィール</h2>

    <%= form_with model:@user do |f| %>
        <div class="field">
            <%= f.label :icon, "アイコン画像" %>
            <%= f.file_field :icon %>
        </div>

        <div class="field">
            <%= f.label :name, "名前" %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
            <%= f.label :profile, "自己紹介" %><br />
            <%= f.text_area :profile, autofocus: true, placeholder: "自己紹介を入力" %>
        </div>
    <% end %>
</div>
