<div class = "log_in" >
  <div class = "log_in_items" >
    <h2 class = "log_in_h2" >アカウント編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <p class = "log_in_p" ><%= f.label :email, "メールアドレス" %></p>
      <%= f.email_field :email, autofocus: true, placeholder: "メールアドレスを入力してください", class: "search_btn" %>

      <p class = "log_in_p" ><%= f.label :password, "変更後パスワード(変更する場合のみ入力)" %></p>
      <%= f.password_field :password, autocomplete: "new-password", class: "search_btn" %>
      
      <% if @minimum_password_length %>
        <p class = "log_in_p_pw" ><%= @minimum_password_length %> 文字以上</p>
      <% end %>

      <p class = "log_in_p" ><%= f.label :password_confirmation, "パスワード確認用(変更する場合のみ入力)" %></p>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "search_btn" %>

      <p class = "log_in_p" ><%= f.label :current_password, "現在のパスワード" %></p>
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "現在のパスワードを入力してください", class: "search_btn" %>

      <div class="actions">
        <%= f.submit "更新", class: "search_btn2" %>
      </div>
    <% end %>

    <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "戻る", :back, class: "back_btn" %>
  </div>
</div>
