<div class = "log_in" >
  <div class = "log_in_items" >
    <h2>アカウント編集 <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <p><%= f.label :email, "メールアドレス" %></p>
      <%= f.email_field :email, autofocus: true, placeholder: "メールアドレスを入力してください", class: "search_btn" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <p><%= f.label :password, "変更後パスワード(変更する場合のみ入力)" %></p>
      <%= f.password_field :password, autocomplete: "new-password", class: "search_btn" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> 文字以上</em>
      <% end %>

      <p><%= f.label :password_confirmation, "パスワード確認用(変更する場合のみ入力)" %></p>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "search_btn" %>

      <p><%= f.label :current_password, "現在のパスワード" %></p>
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "現在のパスワードを入力してください", class: "search_btn" %>

      <div class="actions">
        <%= f.submit "更新", class: "search_btn2" %>
      </div>
    <% end %>

    <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "戻る", :back, class: "back_btn" %>
  </div>
</div>
