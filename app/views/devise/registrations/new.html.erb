<% if flash.now[:notice] %>
  <p class="notice"><%= flash.now[:notice] %></p>
<% end %>

<div class = "log_in">
  <div class = "log_in_items">
    <h2 class = "sign_up_h2" >新しいアカウントを作成</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class = "required2" >
        <%= f.text_field :name, :placeholder => "ユーザー名", autofocus: true, autocomplete: "name", class: "sign_up_field" %>
      </div>

      <div class = "required2" >
        <%= f.email_field :email, :placeholder => "メールアドレス", autofocus: true, autocomplete: "email", class: "sign_up_field" %>
      </div>

      <div class = "required2" >
        <%= f.password_field :password, :placeholder => "パスワード(6文字以上)", autocomplete: "new-password", class: "sign_up_field" %>
      </div>

      <div class = "required2" >
        <%= f.password_field :password_confirmation, :placeholder => "パスワード確認", autocomplete: "new-password", class: "sign_up_field" %>
      </div>

      <div class="actions">
        <%= f.submit "新しいアカウントを作成", class: "search_btn2" %>
      </div>
    <% end %>

    <%= link_to "すでにアカウントをお持ちの方はログイン", new_user_session_path %>
  </div>
</div>
