<div class = "log_in">
  <div class = "log_in_items">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <p><%= f.email_field :email, :placeholder => "メールアドレス", autofocus: true, autocomplete: "email" %></p>
      
      <p><%= f.password_field :password, :placeholder => "パスワード", autocomplete: "current-password" %></p>

      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>

    <%= link_to "新しいアカウントを作成", new_user_registration_path %>
  </div>
</div>
