<div class = "log_in">
  <div class = "log_in_items">
    <h2 class = "sign_up_h2" >ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class = "required2" >
        <%= f.email_field :email, :placeholder => "メールアドレス", autofocus: true, autocomplete: "email" %>
      </div>
      
      <div class = "required2" >
        <%= f.password_field :password, :placeholder => "パスワード", autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "search_btn2" %>
      </div>
    <% end %>

    <%= link_to "新しいアカウントを作成", new_user_registration_path %>
  </div>
</div>
