<% if flash.now[:notice] %>
    <p class="notice"><%= flash.now[:notice] %></p>
<% end %>

<div>
  <div class = "room_show">
    <div class = "container room_container" >
      <% if @register.room_image.present? %>
        <%= image_tag @register.room_image.thumb.url, class: "room_img" %>
      <% else %>
        <%= image_tag "/assets/room.jpg", class: "room_img" %>
      <% end %>

      <div class = "field_room" >
        <div class = "room_usericon" >
          <% if @user.icon.present? %>
            <%= image_tag @user.icon.thumb.url, :size => '65x65' %>
          <% else %>
            <%= image_tag "/assets/default.png", :size => '65x65' %>
          <% end %>
        </div>

        <div class = "room_intro" >
          <p class = "hotel_name" ><%= @register.room_name %></p>
          <p>住所：<%= @register.address %></p>
        </div>
      </div>

      <div class = "field_room" ><%= @register.introduction %></div>
    </div>

    <div class = "container booking_container" >
      <div class = "booking_container2" >
        <% if @booking.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this register from being saved:</h2>
            <ul>
                <% @booking.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
          </div>
        <% end %>

        <p>¥ <%= @register.price %> / 日</p>

        <%= form_with model: @booking, method: :get, url: new_booking_path(@booking) do |f| %>
          <%= f.hidden_field :register_id, value: @register.id %>

          <%= f.label :start_date ,"開始日" %>
          <p><%= f.date_field :start_date, class: "room_search" %></p>

          <%= f.label :end_date ,"終了日" %>
          <p><%= f.date_field :end_date, class: "room_search" %></p>

          <%= f.label :person ,"人数" %>
          <p><%= f.number_field :person, class: "room_search" %></p>

          <% if user_signed_in? %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.submit "予約する", class: "search_btn2" %>
          <% else %>
            <%= link_to "ログイン", new_user_session_path, class: 'btn log_in_btn' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
